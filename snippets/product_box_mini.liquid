<div class="productBoxMini">
	<a class="image" href="{{ product.url }}"><img src="{{ product.images.first.thumb_url }}"></a>
    <a class="title" href="{{ product.url }}">{{ product.title | editable | truncate: 20 }}</a>
    <p class="pricemini">{% if product.old_price %} <span class="myoldprice">{{product.old_price | money}}</span><br>{% endif %} {{ product.price | money }}</p>
    <form action="/cart_items" method="post">
        <input type="hidden" name="quantity" id="quantity" class="quantity" value="1">
        <input type="hidden" name="variant_id" id="variant_id" value="{{ product.variants.first.id }}">

 		{% if product.available %}
    	<!--<input type="button" class="addtocart button buy" value="В корзину">-->

      	  {% if product.variants.size > 1 %}
          	<input type="button" value="В корзину" class="addtocart" onclick="document.location.href='{{product.url}}'" />
          {% else %}
          	<input type="submit" class="addtocart buy" value="В корзину" />
          {% endif %}

      	{% else %}
      		{% if settings.order_button %}
              {% if product.variants.size > 1 %}
          		<input type="button" value="Под заказ" class="addtocart" onclick="document.location.href='{{product.url}}'" />
              {% else %}
          		<input type="submit" class="addtocart buy" value="Под заказ" />
              {% endif %}
            {% else %}
          	  	<input type="submit" disabled="disabled" class="addtocart disabled" value="В корзину" />
            {% endif %}
      	{% endif %}
      	<!--<input type="button" class="addtocart buy" value="В корзину">-->

    </form>
    <div class="clear"></div>
</div>
