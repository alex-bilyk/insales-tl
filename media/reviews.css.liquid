#reviews {
	margin-top: 20px;
  	background-color: #ecf2f5;
  	border: 1px solid #ecf2f5;
  	border-radius:10px;
    padding: 15px 5px 15px 5px;
}

#reviews .box {
  margin:0 0 0 10px;
}

.review {
  margin-bottom:40px;
}

#reviews, #review_form {
  //  padding: 0 30px;
   	display: block;
  	position: relative;
}

ul.reviews {
    list-style-type:none; margin:0;
}

ul.reviews li {
    margin:20px 20px 40px;

}

#review_form dd {
    margin:2px 0 5px 0;

}

#review_form a {
	color: {{ settings.link_color }};
}

#review_form a:hover {
	color: {{ settings.link_color_hover }};
}

#review_form input {
    background-color: #E2E2E2;
}

#review_form input.textfield, #review_form textarea {
  	background-color: {{ settings.form_background_color }};
  	color: {{ settings.form_color }};
    height:19px;
}

#review_form input {
    width:200px;
  	border: 1px solid #CACACA;
    border-radius: 4px;
}

#review_form textarea {
  	width: 100%;
  	border: 1px solid #CACACA;
    border-radius: 4px;
}

#review_form textarea {
	width: 350px;
  	height: 100px;
}

#review_form .send-but {
	cursor: pointer;
  	border: 1px solid #fd8f00;
    background-color: #fd8f00;
 	 margin-bottom:15px;
}

#review_form .send-but:hover {
    background-color: #fd8f00;
}

